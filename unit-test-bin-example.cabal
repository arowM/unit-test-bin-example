name:                unit-test-bin-example
version:             0.1.0.0
author:              Kadzuya OKAMOTO <okamoto@arow.info>
maintainer:          Kadzuya OKAMOTO <okamoto@arow.info>
license:             BSD3
license-file:        LICENSE
author:              Kadzuya OKAMOTO
maintainer:          okamoto@arow.info
-- copyright:           
category:            Codec
build-type:          Simple
cabal-version:       >=1.10

library
  default-language:    Haskell2010
  ghc-options:       -threaded -O2 -Wall
  exposed-modules:   Codec.Base64
  hs-source-dirs:    src
  build-depends:     base >=4.6 && <4.7
                   , hspec >=2.0 && <2.1
                   , QuickCheck >=2.7 && <2.8
                   , array >=0.4 && <0.5

executable unit-test-bin-example
  default-language:    Haskell2010
  ghc-options:       -threaded -O2 -Wall
  main-is:             Main.hs
  -- hs-source-dirs:   unit-test-bin-example
  build-depends:       base >=4.6 && <4.7
                     , unit-test-bin-example


test-suite doctest
  Type:                 exitcode-stdio-1.0
  default-Language:     Haskell2010
  hs-source-dirs:       test
  ghc-options:          -threaded -Wall
  main-is:              doctests.hs
  build-depends:        base >=4.6 && <4.7
                      , doctest >= 0.9 && <1.0

test-suite spec
  type:                 exitcode-stdio-1.0
  default-Language:     Haskell2010
  hs-source-dirs:       test
  ghc-options:          -Wall
  main-is:              Spec.hs
  other-modules:        Codec.Base64Spec
  build-depends:        base >=4.6 && <4.7
                      , hspec
                      , QuickCheck
                      , unit-test-bin-example

source-repository head
  type:                 git
  location:             https://github.com/arowM/unit-test-bin-example
